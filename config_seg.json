{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "type": "make_data_loader",
        "args":{
            "dataset": "steel",
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2,
            "base_size": [512, 512],
            "crop_size": [512, 512]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "use_balanced_weights": true,
    "loss": {
        "type": "SegmentationLosses",
        "args": {
            "size_average": true, 
            "batch_average": true, 
            "ignore_index": 255, 
            "cuda": true
        },
        "mode": "ce"
    },
    "evaluator": "SegEvaluator",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer_type": "SegTrainer",
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
